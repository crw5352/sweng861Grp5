{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "files": {
        "ignore": ["build/**", "coverage/**", "package.json"]
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "ignore": [],
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120,
        "lineEnding": "lf"
    }
}
